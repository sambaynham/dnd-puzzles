<table class="table">
    <thead>
    <tr>
        <th>Reported By</th>
        <th>Summary</th>
        <th>Date</th>
        <th>Referring Url</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% if bugReports is not empty %}
        {% for bugReport in bugReports %}
            <tr>
               <td>
                   <a href="mailto:{{ bugReport.reporterEmail }}">{{ bugReport.reporterName }}</a>
               </td>
                <td>
                    {{ bugReport.summary }}
                </td>
                <td>
                    {{ bugReport.createdAt.format('Y-m-d H:i:s') }}
                </td>
                <td>
                    {{ bugReport.referringUrl }}
                </td>
                <td>
                    <a href="{{ path('admin.bugs.action', {'id': bugReport.getId}) }}">Action</a>
                </td>
            </tr>
        {% endfor %}
    {% else %}
        <td colspan="6"><em>No unactioned reports</em></td>
    {% endif %}
    </tbody>
</table>
