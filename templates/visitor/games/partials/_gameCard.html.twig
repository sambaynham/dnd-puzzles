<article class="game-card {% if game.isArchived %}archived{% endif %}">
    <div class="game-hero">
        <img class="game-hero" src="{{ game.getHeroImageUrl }}" alt="{{ game.getName }}">
        <h3 class="game-title" is="heading-element">{{ game.getName }} {% if game.isArchived %} - Archived{% endif %}</h3>
    </div>

    <div class="game-detail">
        <span class="game-master"><strong>Games Master</strong> {{ game.getGamesMaster.getUsername }}</span>


        <p class="game-description">{{ game.getDescription }}</p>
        {% if mode == 'gamesmaster' and game.isArchived and app.user.canCreateGames() != true %}
            <div class="inline-alert inline-alert-warning">
                You've reached the limit of concurrent games you can run. To unarchive this game, archive another one.
            </div>
        {% endif %}
        <div class="btn-group">
            {% if mode == 'gamesmaster' %}
                <a href="{{ path('app.games.manage', {'gameSlug': game.getSlug}) }}" class="btn btn-info">Manage</a>
                <a class="btn btn-secondary" href="{{ path('app.games.play', {
                    'gameSlug': game.getSlug
                }) }}">View as Player</a>
                {% if game.isArchived %}
                    {% if app.user.canCreateGames %}
                        <a class="btn btn-success" href="{{ path('app.games.unarchive', {
                            'gameSlug': game.getSlug
                        }) }}">Unarchive Game</a>
                    {% else %}
                        <button class="btn btn-success" disabled>Unarchive Game</button>
                    {% endif %}
                {% else %}
                    <a class="btn btn-danger" href="{{ path('app.games.archive', {
                        'gameSlug': game.getSlug
                    }) }}">Archive Game</a>

                {% endif %}
            {% else %}
                <a class="btn btn-secondary" href="{{ path('app.games.play', {
                    'gameSlug': game.getSlug
                }) }}">Play</a>
            {% endif %}

        </div>
    </div>

</article>
