<aside class="user-card">
    <div class="card-avatar-wrapper">
        <img class="card-avatar" src="{{ user.avatarUrl ?? '/dist/images/default-avatar.webp' }}" alt="{{ user.getUserName }}">
    </div>
    <div class="user-details">
        <span class="username">{{ user.getUserName }}</span>
        <em class="joined">Member since {{ user.getCreatedAt.format('F Y') }}</em>
    </div>
</aside>
