{% if error is defined and error is not null %}
    <span class="flash flash-error" is="flash-alert">{{ error.messageKey }}</span>
{% endif %}

<form method="post" action="{{ path('app_login') }}">
    <div id="login-form">
        {% if app.user %}
            <p>You are logged in as {{ app.user.userIdentifier }}.</p>
            <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>

        {% else %}
            <h2>Log In</h2>
            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" value="" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                <a href="{{ path('app.password.request') }}">Reset password</a>
            </div>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="form-group">
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </div>
        {% endif %}
    </div>
</form>
